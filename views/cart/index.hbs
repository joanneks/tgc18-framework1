{{#extends 'base'}}
{{#block 'content'}}
    <h1>Your Cart</h1>
    <a href="/checkout" class="btn btn-primary my-3">Checkout</a>
    <ul class="list-group">
        {{#each cartItems}}
            <li class="list-group-item">
                <h4>{{this.product.name}}</h4>
                <h5>Category: {{this.product.category.name}}</h5>
                <h5>Cost (in cents): {{this.product.cost}}</h5>
                    <form method="POST" action="/cart/{{this.product_id}}/update">
                        <input type="hidden" name="_csrf" value="{{../csrfToken}}"/>
                    Quantity: 
                    <input type="text" value="{{this.quantity}}" name="newQuantity" style="width:30px"/>
                    <input type="submit" value="Update" class="btn btn-primary"/>
                    </form>
                    <a href="/cart/{{this.product_id}}/delete" class="btn btn-danger">Delete</a>
            </li>
        {{/each}}
    </ul>
{{/block}}
{{/extends}}